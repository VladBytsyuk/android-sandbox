<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="disabledBackground" format="reference|color" />
    <attr name="enabledBackground" format="reference|color" />

    <attr name="screenBackground" format="reference|color" />

    <attr name="appBarBackground" format="reference|color" />
    <attr name="bottomBarBackground" format="reference|color" />
    <attr name="bottomBarIconTintDisabled" format="reference|color" />
    <attr name="bottomBarIconTintEnabled" format="reference|color" />

    <attr name="headerBackgroundDrawable" format="reference" />
    <attr name="tabBackground" format="reference|color" />
    <attr name="tabContentBackground" format="reference|color" />
    <attr name="activeTabLineColor" format="reference|color" />
    <attr name="iconTint" format="reference|color" />

    <attr name="textColorBase" format="reference|color" />
    <attr name="textColorSuccess" format="reference|color" />
    <attr name="textColorFailure" format="reference|color" />

    <style name="Theme.Layout.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="screenBackground">?attr/disabledBackground</item>

        <item name="appBarBackground">?attr/enabledBackground</item>
        <item name="bottomBarBackground">?attr/enabledBackground</item>

        <item name="tabBackground">?attr/enabledBackground</item>
        <item name="tabContentBackground">?attr/enabledBackground</item>
    </style>


    <style name="Theme.Layout.NoActionBar.Light" parent="Theme.Layout.NoActionBar">
        <item name="disabledBackground">@color/blue_grey_50</item>
        <item name="enabledBackground">@color/white</item>

        <item name="bottomBarIconTintDisabled">@color/grey_600</item>
        <item name="bottomBarIconTintEnabled">@color/black</item>
        <item name="activeTabLineColor">@color/a_green_400</item>

        <item name="headerBackgroundDrawable">@drawable/img_header_bkg_light</item>
        <item name="iconTint">@color/grey_600</item>

        <item name="textColorBase">@color/black</item>
        <item name="textColorSuccess">@color/green_700</item>
        <item name="textColorFailure">@color/a_red_400</item>
    </style>


    <style name="Theme.Layout.NoActionBar.Dark" parent="Theme.Layout.NoActionBar">
        <item name="disabledBackground">@color/black</item>
        <item name="enabledBackground">@color/blue_grey_900_dark</item>

        <item name="bottomBarIconTintDisabled">@color/grey_400</item>
        <item name="bottomBarIconTintEnabled">@color/white</item>
        <item name="activeTabLineColor">@color/a_green_400_dark</item>

        <item name="headerBackgroundDrawable">@drawable/img_header_bkg_dark</item>
        <item name="iconTint">@color/grey_400</item>

        <item name="textColorBase">@color/white</item>
        <item name="textColorSuccess">@color/green_700_light</item>
        <item name="textColorFailure">@color/a_red_400_light</item>
    </style>
</resources>